{
  "hosting": {
    "public": "dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/api/**",
        "run": {
          "serviceId": "chibitek-competitive-platform",
          "region": "us-east4"
        }
      },
      {
        "source": "/read",
        "run": {
          "serviceId": "chibitek-competitive-platform",
          "region": "us-east4"
        }
      },
      {
        "source": "/write",
        "run": {
          "serviceId": "chibitek-competitive-platform",
          "region": "us-east4"
        }
      },
      {
        "source": "/scrape",
        "run": {
          "serviceId": "chibitek-competitive-platform",
          "region": "us-east4"
        }
      },
      { "source": "**", "destination": "/index.html" }
    ],
    "predeploy": ["npm run build"]
  }
}
