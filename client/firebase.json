{
  "hosting": {
    "public": "dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/api/**",
        "run": {
          "serviceId": "REPLACE_WITH_CLOUD_RUN_SERVICE_ID",
          "region": "us-central1"
        }
      },
      { "source": "**", "destination": "/index.html" }
    ],
    "predeploy": ["npm run build"]
  }
}
